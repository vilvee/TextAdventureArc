<Window x:Name="MainWindow" x:Class="Arcane.MainScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" Height="670" Width=" 800"
        AllowsTransparency="True" 
        ResizeMode="CanResizeWithGrip" 
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="WindowIconStyle"
               TargetType="{x:Type Hyperlink}">
            <Setter Property="FontFamily"
                    Value="Webdings" />
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="TextBlock.TextDecorations"
                    Value="{x:Null}" />
            <Setter Property="Cursor"
                    Value="{x:Null}" />
            <Setter Property="Foreground"
                    Value="#ffff" />
        </Style>
    </Window.Resources>
    <Grid>
        <Border Background="#181736" 
                BorderBrush="Black" 
                BorderThickness="1" 
                CornerRadius="20">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <TextBlock DockPanel.Dock="Right"
                       VerticalAlignment="Center" Margin="0,0,12,0" 
                       Foreground="#FFE5DCDC">
                <Hyperlink Click="TriggerClose"
                           Style="{StaticResource WindowIconStyle}">r</Hyperlink>
                    </TextBlock>
                    <TextBlock DockPanel.Dock="Right"
                       VerticalAlignment="Center" Margin="0,0,29,0" 
                       Foreground="#FFE5DCDC">
                <Hyperlink Click="TriggerMinimize"
                           Style="{StaticResource WindowIconStyle}">0</Hyperlink>
                    </TextBlock>
                    <StatusBar Background="Transparent"
                       MouseDoubleClick="TriggerMaximize"
                       MouseMove="TriggerMoveWindow">
                        <TextBlock DockPanel.Dock="Left"
                           Text="Arcane"
                           FontSize="16" Margin="9,0,0,0" Foreground="#FFE5DBDB"/>
                    </StatusBar>
                </DockPanel>
                <!-- main content -->
                <Grid Margin="15,0,15,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="25" />
                        <RowDefinition Height="50" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="326"/>
                        <ColumnDefinition Width="83"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="3"
                           Content="ECHOE OF THE ANCIENTS" 
                           Foreground="#f96b88" 
                           FontFamily="Bookman Old Style" 
                           FontSize="22" 
                           VerticalAlignment="Bottom" 
                           HorizontalAlignment="Left" 
                           HorizontalContentAlignment="Center" 
                           VerticalContentAlignment="Center" 
                           BorderBrush="{x:Null}" 
                           Background="{x:Null}" 
                           FontStretch="Expanded" Height="36" Width="308" />

                    <Border Grid.Row="1" Grid.Column="1" 
                        Background="#343661" 
                            BorderBrush="#343661" 
                            BorderThickness="1" 
                            CornerRadius="8">
                        <Button   x:Name="btnNewGame" Content="NEW GAME" 
                                  Click="btnNewGame_Click" BorderBrush="{x:Null}" 
                                  Foreground="White"
                                  UseLayoutRounding="False"
                                  FontFamily="Bookman Old Style" 
                                  FontSize="16" Cursor="Hand"
                                  Background="{x:Null}"  />

                    </Border>

                    <Border Grid.Row="3" Grid.Column="1" 
    Background="#343661" 
    BorderBrush="#343661" 
    BorderThickness="1" 
    CornerRadius="8">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#343661"/>
                                <Setter Property="BorderBrush" Value="#343661"/>
                                <Setter Property="CornerRadius" Value="8"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=btnContinueGame, Path=IsEnabled}" Value="False">
                                        <Setter Property="Background" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Button x:Name="btnContinueGame" Content="CONTINUE" 
            Click="btnContinueGame_Click" 
            Foreground="White"
            UseLayoutRounding="False"
            FontFamily="Bookman Old Style" 
            FontSize="16" Cursor="Hand"
            Background="{x:Null}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsEnabled" Value="false">
                                            <Setter Property="Background" TargetName="border" Value="Gray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Border>





                </Grid>
            </DockPanel>
        </Border>
    </Grid>
</Window>
