<Window x:Name="MyGame" x:Class="Arcane.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        xmlns:local="clr-namespace:Arcane"
        Title="Arcane" Height="690" Width="735" Closed="MyGame_Closed">

    <Window.Resources>
        <Style x:Key="WindowIconStyle"
               TargetType="{x:Type Hyperlink}">
            <Setter Property="FontFamily"
                    Value="Webdings" />
            <Setter Property="FontSize"
                    Value="16" />
            <Setter Property="TextBlock.TextDecorations"
                    Value="{x:Null}" />
            <Setter Property="Cursor"
                    Value="{x:Null}" />
            <Setter Property="Foreground"
                    Value="#ffff" />
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="/MainBackground.jpg"/>
    </Window.Background>

    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <TextBlock DockPanel.Dock="Right"
                       VerticalAlignment="Center" Margin="0,0,12,0" Foreground="#FFE5DCDC">
                <Hyperlink Click="TriggerClose"
                           Style="{StaticResource WindowIconStyle}">r</Hyperlink>
            </TextBlock>
            <TextBlock DockPanel.Dock="Right"
                       VerticalAlignment="Center" Margin="0,0,29,0" Foreground="#FFE5DCDC">
                <Hyperlink Click="TriggerMinimize"
                           Style="{StaticResource WindowIconStyle}">0</Hyperlink>
            </TextBlock>
            <StatusBar Background="Transparent"
                       MouseDoubleClick="TriggerMaximize"
                       MouseMove="TriggerMoveWindow">
                <TextBlock DockPanel.Dock="Left"
                           Text="Arcane"
                           FontSize="16" Margin="9,0,0,0" Foreground="#FFE5DBDB"/>
            </StatusBar>

        </DockPanel>

        <Canvas Margin="0,-2,0,2">
            <Label Content="Hit Points:" Canvas.Left="18" Canvas.Top="74" TextBlock.Foreground="#FFE5DBDB"/>
            <Label Content="Level:" Canvas.Left="18" Canvas.Top="20" HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="#FFE5DBDB"/>
            <Label Content="Experience:" Canvas.Left="18" Canvas.Top="46" HorizontalAlignment="Center" VerticalAlignment="Top" TextBlock.Foreground="#FFE5DBDB"/>
            <Label Content="Gold:" Canvas.Left="18" Canvas.Top="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label x:Name="lbHitPoints" Content="" Canvas.Left="110" Canvas.Top="73" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Height="28"/>
            <Label x:Name="lbLevel" Content="" Canvas.Left="110" Canvas.Top="19" Width="65" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label x:Name="lbExperience" Content="" Canvas.Left="110" Canvas.Top="45" Width="65" Height="28" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label x:Name="lbGold" Content="" Canvas.Left="110" Canvas.Top="99" Width="65" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Content="Select Action:" Canvas.Left="617" Canvas.Top="531"/>
            <ComboBox x:Name="cboWeapons" DisplayMemberPath="Name" SelectedValuePath="ID" Canvas.Left="369" Canvas.Top="559" Width="227" IsDropDownOpen="False" HorizontalAlignment="Left" VerticalAlignment="Center" SelectionChanged="cboWeapons_SelectionChanged"/>
            <Button x:Name="btnMap" Content="Map" Canvas.Left="476" Canvas.Top="459" Width="78" Height="23" Click="btnMap_Click" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Button x:Name="btnUseWeapon" Content="Use" Canvas.Left="620" Canvas.Top="559" HorizontalAlignment="Left" VerticalAlignment="Center" Width="78" Click="btnUseWeapon_Click"/>
            <Button x:Name="btnUsePotion" Content="Use" Canvas.Left="620" Canvas.Top="593" Width="78" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnUsePotion_Click"/>
            <Button x:Name="btnNorth" Content="North" Canvas.Left="493" Canvas.Top="433" Height="22" Width="45" Click="btnNorth_Click"/>
            <Button x:Name="btnEast" Content="East" Canvas.Left="573" Canvas.Top="457" Height="22" Width="45" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnEast_Click"/>
            <Button x:Name="btnSouth" Content="South" Canvas.Left="493" Canvas.Top="487" Height="22" Width="45" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnSouth_Click"/>
            <Button x:Name="btnTrade" Content="Trade" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="23" Margin="493,620,0,0" Click="btnTrade_Click"/>
            <Button x:Name="btnWest" Content="West" Canvas.Left="412" Canvas.Top="457" Height="22" Width="45" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnbtnWest_Click"/>
            <RichTextBox x:Name="rtbLocation" Height="105" Width="351" Canvas.Top="19" Canvas.Left="347" IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#7A000000" BorderBrush="#3F6F86CC">
                <FlowDocument>
                    <Paragraph>
                        <Run Text=""/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <RichTextBox x:Name="rtbMessages" Height="286" Width="351" Canvas.Top="130" Canvas.Left="347" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Center" TextChanged="rtbMessages_TextChanged" VerticalScrollBarVisibility="Visible" Background="#7A000000">
                <FlowDocument>
                    <Paragraph AllowDrop="False">
                        <Run Text=""/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <DataGrid x:Name="dgvInventory" Height="309" Width="312" Canvas.Top="130" Canvas.Left="16" CanUserSortColumns="True" IsSynchronizedWithCurrentItem="True" AutoGenerateColumns="False" IsReadOnly="True" IsEnabled="False" HeadersVisibility="Column" SelectionMode="Single" Background="#7A000000">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Width="197" Binding="{Binding Description}" />
                    <DataGridTextColumn Header="Quantity" Width="*" Binding="{Binding Quantity}" />
                </DataGrid.Columns>
            </DataGrid>

            <DataGrid x:Name="dgvQuests" Height="189" Width="312" Canvas.Top="446" Canvas.Left="16" IsSynchronizedWithCurrentItem="True" CanUserSortColumns="True" AutoGenerateColumns="False" HorizontalAlignment="Left" VerticalAlignment="Top" IsReadOnly="True" SelectionMode="Single" IsEnabled="False" HeadersVisibility="Column" Background="#7A000000" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Width="197" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Done?" Width="*" Binding="{Binding IsCompleted}" />
                </DataGrid.Columns>
            </DataGrid>
            <ComboBox x:Name="cboPotions" DisplayMemberPath="Name" SelectedValuePath="ID" Canvas.Left="368" Canvas.Top="591" Width="228" IsDropDownOpen="False" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Canvas>
    </DockPanel>
</Window>
