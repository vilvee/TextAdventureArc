<Window x:Name="MyGame" x:Class="Arcane.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arcane"
        mc:Ignorable="d"
        Title="Arcane" Height="690" Width="735">
    <Canvas Margin="0,-2,0,2">
        <Label Content="Hit Points:" Canvas.Left="18" Canvas.Top="74"/>
        <Label Content="Level:" Canvas.Left="18" Canvas.Top="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Experience:" Canvas.Left="18" Canvas.Top="46" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="Gold:" Canvas.Left="18" Canvas.Top="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label x:Name="lbHitPoints" Content="" Canvas.Left="110" Canvas.Top="73" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Height="28"/>
        <Label x:Name="lbLevel" Content="" Canvas.Left="110" Canvas.Top="19" Width="65" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label x:Name="lbExperience" Content="" Canvas.Left="110" Canvas.Top="45" Width="65" Height="28" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="lbGold" Content="" Canvas.Left="110" Canvas.Top="99" Width="65" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Select Action:" Canvas.Left="617" Canvas.Top="531"/>
        <ComboBox x:Name="cboWeapons" Canvas.Left="369" Canvas.Top="559" Width="227" IsDropDownOpen="True" SelectionChanged="ComboBox_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <ComboBox x:Name="cboPotions" Canvas.Left="369" Canvas.Top="593" Width="218" IsDropDownOpen="True" SelectionChanged="ComboBox_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="btnUseWeapon" Content="Use" Canvas.Left="620" Canvas.Top="559" HorizontalAlignment="Left" VerticalAlignment="Center" Width="78" Click="btnUseWeapon_Click"/>
        <Button x:Name="btnUsePotion" Content="Use" Canvas.Left="620" Canvas.Top="593" Width="78" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnUsePotion_Click"/>
        <Button x:Name="btnNorth" Content="North" Canvas.Left="493" Canvas.Top="433" Height="22" Width="45" Click="btnNorth_Click"/>
        <Button x:Name="btnEast" Content="East" Canvas.Left="573" Canvas.Top="457" Height="22" Width="45" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnEast_Click"/>
        <Button x:Name="btnSouth" Content="South" Canvas.Left="493" Canvas.Top="487" Height="22" Width="45" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnSouth_Click"/>
        <Button x:Name="btnWest" Content="West" Canvas.Left="412" Canvas.Top="457" Height="22" Width="45" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnbtnWest_Click"/>
        <RichTextBox x:Name="rtbLocation" Height="105" Width="351" Canvas.Top="19" Canvas.Left="347" IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Center">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <RichTextBox x:Name="rtbMessages" Height="286" Width="351" Canvas.Top="130" Canvas.Left="347" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Center">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <DataGrid x:Name="dgvInventory" Height="309" Width="312" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Top="130" Canvas.Left="16" IsSynchronizedWithCurrentItem="True" AutoGenerateColumns="False" SelectionChanged="DataGrid_SelectionChanged" IsReadOnly="True" IsEnabled="False" HeadersVisibility="None" SelectionMode="Single"/>
        <DataGrid x:Name="dgvQuests" Height="189" Width="312" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Top="446" Canvas.Left="16" IsSynchronizedWithCurrentItem="True" AutoGenerateColumns="False" SelectionChanged="DataGrid_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top" IsReadOnly="True" SelectionMode="Single" HeadersVisibility="None" IsEnabled="False"/>
    </Canvas>
</Window>
